{
    "name": "@thi.ng/checks",
    "version": "1.5.5",
    "description": "Single-function sub-modules for type, feature & value checks",
    "main": "./lib/index.js",
    "module": "./index.js",
    "typings": "./index.d.ts",
    "repository": {
        "type": "git",
        "url": "https://github.com/thi-ng/umbrella.git"
    },
    "homepage": "https://github.com/thi-ng/umbrella/tree/master/packages/checks",
    "author": "Karsten Schmidt <k+npm@thi.ng>",
    "license": "Apache-2.0",
    "scripts": {
        "build": "yarn clean && yarn build:es6 && yarn build:cjs && yarn build:umd",
        "build:cjs": "tsc --declaration --outDir lib --module commonjs",
        "build:es6": "tsc --declaration",
        "build:umd": "rollup index.js -f umd -n thi.ng.checks -o dist/checks.js && babili -o dist/checks.min.js dist/checks.js",
        "clean": "rm -rf *.js *.d.ts .nyc_output build coverage doc es6 lib",
        "cover": "yarn test && nyc report --reporter=lcov",
        "doc": "node_modules/.bin/typedoc --mode modules --out doc src",
        "pub": "yarn build && yarn publish --access public",
        "test": "rm -rf build && tsc -p test && nyc mocha build/test/*.js"
    },
    "devDependencies": {
        "@types/mocha": "^5.2.0",
        "@types/node": "^10.0.6",
        "babili": "^0.1.4",
        "mocha": "^5.1.1",
        "nyc": "^11.7.1",
        "typedoc": "^0.11.1",
        "typescript": "^2.8.3"
    },
    "keywords": [
        "check",
        "detect",
        "ES6",
        "feature",
        "reflection",
        "types",
        "typescript",
        "validation"
    ],
    "publishConfig": {
        "access": "public"
    }
}